<h1 class="page-header">Welcome to Bev.it!</h1>

<%= form_tag(list_by_ingredient_path, method: "get", class: "form-horizontal") do %>
  <div class="form-group">
    <%= label_tag(:ingredients, "", class: "col-xs-1 control-label glyphicon glyphicon-search") %>
    <div class="col-xs-10">
      <%= text_field_tag(:ingredients, "", class: "form-control", placeholder: "Example: tequila, lime juice, triple sec") %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-offset-1 col-xs-10">
      <%= submit_tag("Search", class: "btn btn-default") %>
    </div>
  </div>
<% end %>
